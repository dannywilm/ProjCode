    private void hitungBActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        
        double nUTS, nT, nUAS, hasil;
        int absensi;
        String grade = null;
        
        try
        {
            nT = Double.parseDouble(nTField.getText());
        }
        catch (NumberFormatException ex)
        {
            JOptionPane.showMessageDialog(null, "Input harus angka!!!");
            nTField.requestFocus();
            return;
        }
        
        try
        {
            nUTS = Double.parseDouble(nUtsField.getText());
        }
        catch (NumberFormatException ex)
        {
            JOptionPane.showMessageDialog(null, "Input harus angka!!!");
            nUtsField.requestFocus();
            return;
        }
        
        try
        {
            nUAS = Double.parseDouble(nUasField.getText());
        }
        catch (NumberFormatException ex)
        {
            JOptionPane.showMessageDialog(null, "Input harus angka!!!");
            nUasField.requestFocus();
            return;
        }
        
        try
        {
            absensi = Integer.parseInt(absField.getText());
        }
        catch (NumberFormatException ex)
        {
            JOptionPane.showMessageDialog(null, "Input harus angka!!!");
            absField.requestFocus();
            return;
        }
        
        if (nT > 100)
        {
            JOptionPane.showMessageDialog(null, "Maaf, input anda lebih dari 100");
            nTField.requestFocus();
        }
        
        if (nUTS > 100)
        {
            JOptionPane.showMessageDialog(null, "Maaf, input anda lebih dari 100");
            nUtsField.requestFocus();
        }
        
        if (nUAS > 100)
        {
            JOptionPane.showMessageDialog(null, "Maaf, input anda lebih dari 100");
            nUasField.requestFocus();
        }
        
        if (absensi > 100)
        {
            JOptionPane.showMessageDialog(null, "Maaf, input anda lebih dari 100");
            absField.requestFocus();
        }
        
        hasil = (absensi * 0.1) + (nT * 0.2) + (nUTS * 0.3) + (nUAS * 0.4);
        
        if (absensi >= 70)
        {
            if (hasil > 85)
            {
                grade = "A+";
            }
            else if (hasil > 80)
            {
                grade = "B+";
            }
            else if (hasil > 75)
            {
                grade = "B";
            }
            else if (hasil > 67)
            {
                grade = "C+";
            }
            else if (hasil > 60)
            {
                grade = "C";
            }
            else if (hasil > 57)
            {
                grade = "D";
            }
            else
            {
                grade = "E";
            }
        }
        else
        {
            grade = "E";
            JOptionPane.showMessageDialog(null, "Maaf, anda tidak lulus\n"
                    + "dikarenakan kehadiran anda tidak memenuhi\n"
                    + "syarat kelulusan T_T");
        }
        
        // output
        hasilField.setText(String.valueOf(hasil));
        gradeField.setText(grade);
        
    }                                       

    private void keluarBActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        
        this.dispose();
        
    }                                       

    private void ulangBActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        
        nTField.setText(null);
        nUtsField.setText(null);
        nUasField.setText(null);
        absField.setText(null);
        hasilField.setText(null);
        gradeField.setText(null);
        
    }                                      

